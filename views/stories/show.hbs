<div class="row">
    <div class="col s12 m8">
        <h3>{{story.title}}
            <small>{{{editIcon story.user user story._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY'}}</span>
                {{{story.body}}}
            </div>
        </div>
        <a href="/stories" class="btn blue lighten-1">All ReCaps</a>
    </div>
    <div class="col s12 m4">
        <div class="card small center-align" id="profile">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{story.user.image}}" alt="profile picture" class="circle responsive-img">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}" id="more-link">More from {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>