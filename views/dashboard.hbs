<h6>Your Dashboard</h6>
<h3>Welcome, {{name}}!</h3>

{{#if stories}}

<div class="row">
    <div class="col s12">
      <div class="card blue-grey lighten-4">
        <div class="card-content">
          <span class="card-title">Your ReCaps:</span>
          <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
            <tr>
                <td><a href="/stories/{{_id}}">{{title}}</a></td>
                <td>{{formatDate createdAt "MMM Do YYYY, h:mm:ss a"}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td>
                    <a href="/stories/edit/{{_id}}" class="btn btn-float yellow darken-3">
                        <i class="material-icons small">edit</i>
                    </a>
                    <form action="/stories/{{_id}}" method="POST" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn red">
                            {{!-- <i class="fas fa-trash"></i> --}}
                            <i class="material-icons small">delete</i>
                        </button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
        </div>
        <div class="card-action">
            <a href="/stories" class="btn btnfloat red">See All Recaps</a>
        </div>
      </div>
    </div>
</div>

{{else}}


<div class="row">
    <div class="col s12">
      <div class="card grey lighten-2">
        <div class="card-content">
          <span class="card-title">Your ReCaps:</span>
          <p>You have not created any ReCaps. You should!</p>
        </div>
        <div class="card-action">
            <a href="/stories" class="btn btn-float red">See All Recaps</a>
        </div>
      </div>
    </div>
  </div>

{{/if}}